---
import type { Hotel } from '@/types/hotel';

export interface Props {
  hotel: Hotel;
  priority?: boolean;
}

const { hotel, priority = false } = Astro.props;

const imageUrl = hotel.photo || '/placeholder-hotel.jpg';
const reviewsText = hotel.reviews ? `${hotel.reviews} reviews` : 'No reviews yet';
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300" itemscope itemtype="https://schema.org/Hotel">
  <div class="relative">
    <img
      src={imageUrl}
      alt={`${hotel.name} in ${hotel.city}`}
      class="w-full h-48 object-cover"
      loading={priority ? "eager" : "lazy"}
      decoding={priority ? "sync" : "async"}
      itemprop="image"
      width="400"
      height="192"
    />
    {hotel.reviews && (
      <div class="absolute top-2 right-2 bg-white rounded-full px-2 py-1 text-xs font-semibold">
        ‚≠ê {hotel.reviews}
      </div>
    )}
  </div>

  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-2" itemprop="name">
      <a
        href={`/hotels/${hotel.slug}`}
        class="hover:text-primary-600 transition-colors"
        aria-label={`View details for ${hotel.name}`}
      >
        {hotel.name}
      </a>
    </h3>

    <div class="space-y-2 text-sm text-gray-600">
      <div class="flex items-center" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
        <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span itemprop="streetAddress">{hotel.street}</span>
        <span itemprop="addressLocality" class="hidden">{hotel.city}</span>
        <span itemprop="postalCode" class="hidden">{hotel.postal_code}</span>
      </div>

      {hotel.phone && (
        <div class="flex items-center">
          <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <a
            href={`tel:${hotel.phone}`}
            class="hover:text-primary-600"
            itemprop="telephone"
            aria-label={`Call ${hotel.name}`}
          >
            {hotel.phone}
          </a>
        </div>
      )}

      <div class="flex items-center">
        <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
        </svg>
        <span>{reviewsText}</span>
      </div>
    </div>

    <div class="mt-4 flex justify-between items-center">
      <a
        href={`/hotels/${hotel.slug}`}
        class="inline-flex items-center px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
        aria-label={`View full details for ${hotel.name}`}
      >
        View Details
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>

      {hotel.site && (
        <a
          href={hotel.site}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary-600 hover:text-primary-700 text-sm font-medium"
          itemprop="url"
          aria-label={`Visit ${hotel.name} website (opens in new tab)`}
        >
          Visit Website
        </a>
      )}
    </div>
  </div>

  <!-- Hidden schema data -->
  <div class="hidden" itemprop="geo" itemscope itemtype="https://schema.org/GeoCoordinates">
    <span itemprop="latitude">{hotel.latitude}</span>
    <span itemprop="longitude">{hotel.longitude}</span>
  </div>
</article>