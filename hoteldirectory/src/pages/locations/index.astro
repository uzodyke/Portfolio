---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import { createClient } from '@supabase/supabase-js';

const SUPABASE_URL = 'https://ntncjdoeutfkkdkzaaif.supabase.co';
const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im50bmNqZG9ldXRma2tka3phYWlmIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjI1Nzk3MDUsImV4cCI6MjA3ODE1NTcwNX0.AHz3vm6Wz9yLQjzrR0-LELv6V8s5Nacr0OmWt5IzHuo';

const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

// Get cities from the database
const { data: cityData } = await supabase
  .from('hotels')
  .select('city')
  .not('city', 'is', null);

// Get unique cities with hotel counts
interface CityStats {
  name: string;
  count: number;
  slug: string;
  displayName: string;
}

const cityStats = cityData?.reduce((acc, hotel) => {
  const city = hotel.city?.trim();
  if (city && city.length > 2) { // Filter out invalid entries like "7a", "6PZ"
    if (!acc[city]) {
      acc[city] = {
        name: city,
        count: 0,
        slug: city.toLowerCase().replace(/\s+/g, '-'),
        displayName: city
      };
    }
    acc[city].count++;
  }
  return acc;
}, {} as Record<string, CityStats>) || {};

const cities = Object.values(cityStats).sort((a, b) => b.count - a.count);

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Locations', url: '/locations' }
];

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Hotel Locations - Browse by City",
  "description": "Explore hotels by location. Find accommodations in your preferred destination from our comprehensive directory.",
  "url": "https://hoteldirectory.com/locations",
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": cities.length,
    "itemListElement": cities.map((city, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Place",
        "name": city.displayName,
        "url": `https://hoteldirectory.com/locations/${city.slug}`
      }
    }))
  }
};
---

<BaseLayout
  title="Most Expensive Hotel in London by Area | Premium Locations"
  description={`Find the most expensive hotel in London and surrounding areas across ${cities.length} locations. Explore luxury accommodations in London, Croydon, Hounslow and more.`}
  canonical="https://hoteldirectory.com/locations"
  jsonLd={jsonLd}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumbs -->
    <Breadcrumbs items={breadcrumbs} />

    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Most Expensive Hotel in London - Premium Areas
      </h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Discover the most expensive hotel in London and surrounding areas across {cities.length} locations. From central London to nearby towns like Croydon and Hounslow,
        find premium accommodations and luxury properties in the greater London area.
      </p>
    </div>

    <!-- Search Section -->
    <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
      <div class="max-w-md mx-auto">
        <label for="location-search" class="block text-sm font-medium text-gray-700 mb-2">
          Search Destinations
        </label>
        <div class="relative">
          <input
            type="text"
            id="location-search"
            placeholder="Search cities..."
            class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          />
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Cities Grid -->
    <div id="cities-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {cities.map((city, index) => (
        <a
          href={`/locations/${city.slug}`}
          class="group bg-white rounded-lg shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden"
        >
          <!-- City Image Placeholder -->
          <div class="relative h-32 bg-gradient-to-br from-primary-400 to-primary-600">
            <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-10 transition-all duration-300"></div>
            <div class="absolute bottom-3 left-3">
              <h3 class="text-white font-semibold text-lg">{city.displayName}</h3>
            </div>
          </div>

          <!-- City Info -->
          <div class="p-4">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 text-sm">
                  {city.count} {city.count === 1 ? 'hotel' : 'hotels'}
                </p>
              </div>
              <div class="text-primary-600 group-hover:text-primary-700 transition-colors">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="text-center py-12 hidden">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No locations found</h3>
      <p class="mt-1 text-sm text-gray-500">Try searching with different keywords.</p>
    </div>

    <!-- Top Cities -->
    <div class="mt-16 bg-gray-50 rounded-lg p-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6 text-center">
        Top Cities for Most Expensive Hotels in London Area
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {cities.slice(0, 8).map((city) => (
          <a
            href={`/locations/${city.slug}`}
            class="text-center p-4 bg-white rounded-lg hover:bg-gray-100 transition-colors group"
          >
            <div class="text-lg font-medium text-gray-900 group-hover:text-primary-600 mb-1">
              {city.displayName}
            </div>
            <div class="text-sm text-gray-600">
              {city.count} hotels
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">
        Can't Find Your Destination?
      </h2>
      <p class="text-gray-600 mb-6">
        We're constantly adding new hotels and destinations to our directory.
        Contact us if you'd like to suggest a location or have any questions.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/hotels"
          class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
        >
          Browse All Hotels
        </a>
        <a
          href="#contact"
          class="inline-flex items-center px-6 py-3 bg-white border border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // City search functionality
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('location-search') as HTMLInputElement;
    const citiesGrid = document.getElementById('cities-grid');
    const emptyState = document.getElementById('empty-state');

    if (!searchInput || !citiesGrid || !emptyState) return;

    let allCityCards: Element[] = [];

    // Extract all city cards
    const extractCityCards = () => {
      allCityCards = Array.from(citiesGrid.querySelectorAll('a'));
    };

    const filterCities = () => {
      const searchTerm = searchInput.value.toLowerCase();

      const filteredCards = allCityCards.filter(card => {
        const cityName = card.querySelector('h3')?.textContent?.toLowerCase() || '';
        return cityName.includes(searchTerm);
      });

      // Hide all cards
      allCityCards.forEach(card => {
        (card as HTMLElement).style.display = 'none';
      });

      // Show filtered cards
      filteredCards.forEach(card => {
        (card as HTMLElement).style.display = 'block';
      });

      // Show/hide empty state
      if (filteredCards.length === 0) {
        emptyState.classList.remove('hidden');
      } else {
        emptyState.classList.add('hidden');
      }
    };

    // Initialize
    extractCityCards();

    // Search event listener
    let searchTimeout: number;
    searchInput.addEventListener('input', () => {
      // Debounce search
      clearTimeout(searchTimeout);
      searchTimeout = window.setTimeout(filterCities, 300);
    });
  });
</script>